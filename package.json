{
  "name": "next-js-boilerplate",
  "version": "0.1.0",
  "author": "Yannick Wittwer",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && npm run lint:scss",
    "lint:scss": "stylelint 'app/**/*.scss' --syntax scss --fix ; exit 0",
    "lint:js": "next lint",
    "test:unit": "jest --passWithNoTests",
    "test:unit:update": "jest --passWithNoTests --updateSnapshot",
    "type:check": "tsc",
    "cypress": "cypress",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "@mhauri/tier-api-client": "0.1.1",
    "autoprefixer": "^10.3.4",
    "leaflet": "^1.7.1",
    "moment": "^2.29.1",
    "next": "^11.1",
    "next-compose-plugins": "^2.2.1",
    "next-images": "^1.8.1",
    "postcss": "^8.3.6",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-leaflet": "^3.2.1",
    "sass": "^1.41",
    "tailwindcss": "^2.2.15"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.14",
    "@testing-library/dom": "^8.5",
    "@testing-library/jest-dom": "^5.14",
    "@testing-library/react": "^12.1",
    "@types/jest": "^27.0",
    "@types/node": "^16.9",
    "@types/react": "^17.0",
    "@typescript-eslint/eslint-plugin": "^4.31",
    "@typescript-eslint/parser": "^4.31",
    "axios": "^0.21",
    "babel-jest": "^27.2",
    "cypress": "^8.4",
    "eslint": "^7.32",
    "eslint-config-next": "^11.1",
    "eslint-plugin-react": "^7.25",
    "husky": "^7.0",
    "identity-obj-proxy": "^3.0",
    "jest": "^27.2",
    "jest-dom": "^4.0",
    "lint-staged": "^10.5",
    "prettier": "^2.4",
    "stylelint": "^13.13",
    "stylelint-config-idiomatic-order": "^8.1",
    "ts-node": "^10.2",
    "typescript": "^4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.{js,jsx,ts,tsx}": "eslint",
    "*.{css,scss}": "stylelint"
  }
}
